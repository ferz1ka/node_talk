<% include .header %>
  <header>
    <h2>Ntalk - Editar contato</h2>
  </header>
  <section>
    <form action="/contacts/<%- id %>/update" method="post">
      <label>Nome:</label>
      <input type="text" name="name" value="<%- contact.name %>">
      <label>E-mail:</label>
      <input type="text" name="email" value="<%- contact.email %>">
      <button type="submit">Atualizar</button>
    </form>
  </section>
  <% include .exit %>
    <% include .footer %>